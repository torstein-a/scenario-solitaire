{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "DOM",
      "es2019"
    ],
    "noEmit": false,
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts"
  ]
}